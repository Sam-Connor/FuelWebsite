@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Fuel Usage</h1>
    
</div>

<a class="btn btn-primary" asp-area="" asp-controller="Fuel" asp-action="Add">Add Fuel Stop</a>

<br>
<br>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      
      <th scope="col">Stop Date</th>
      <th scope="col">Amount (Litres)</th>
      <th scope="col">Price / Litre</th>
      <th scope="col">Total Cost</th>
      <th scope="col">Distance Travelled</th>
      <th scope="col"></th>
      <th scope="col"></th>
      

    </tr>
  </thead>
  <tbody>

      @foreach (var stop in Model.Stops) {
    <tr>
     
      <td>@stop.stopDate</td>
      <td>@stop.stopAmount</td>
      <td>@stop.price</td>
      <td>@Math.Round((stop.price * stop.stopAmount /100),2)</td>
      <td>@stop.distanceTravelled</td>
      <td><a class="btn btn-outline-primary" asp-area="" asp-controller="Fuel" asp-action="Edit" asp-route-id="@stop.id">Edit Stop</a></td>
      <td><a class="btn btn-outline-primary" asp-area="" asp-controller="Fuel" asp-action="Delete" asp-route-id="@stop.id">Delete Stop</a></td>
    
      
    </tr>
      }
  </tbody>
</table>
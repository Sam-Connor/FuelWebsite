@model Fuel.Data.FuelStop

<div class="text-center">
    <h1 class="display-4">
        Edit a Stop
    </h1>   
</div>

<a class="btn btn-primary" asp-area="" asp-controller="Fuel" asp-action="Index">Back to Main Menu</a>


<form asp-action="EditStop">
    <div>
        <input asp-for="id" type="hidden" value="@Model.id"/>
        <div class="form-group">
            <label asp-for="stopDate" class="control-label">Stop Date</label>
            <input asp-for="stopDate" class="form-control" value="@Model.stopDate"/>
            
            </div>
        <div class="form-group">
            <label asp-for="stopAmount" class="control-label">Amount (Litres)</label>
            <input asp-for="stopAmount" class="form-control" value="@Model.stopAmount" />
        </div>
        <div class="form-group">
            <label asp-for="price" class="control-label">Price (Â£)</label>
            <input asp-for="price" class="form-control" value="@Model.price"/>
        </div>
        <div class="form-group">
            <label asp-for="distanceTravelled" class="control-label">Distance Travelled (Miles)</label>
            <input asp-for="distanceTravelled" class="form-control" value="@Model.distanceTravelled"/>
        </div>
        
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>
</form>

